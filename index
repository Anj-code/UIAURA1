 <script>
  let mediaRecorder;
  let audioChunks = [];
  let isRecording = false;
  let stream;

  async function toggleMic() {
    if (!isRecording) {
      startMic();
    } else {
      stopMic();
    }
  }

  async function startMic() {
    try {
      stream = await navigator.mediaDevices.getUserMedia({ audio: true });
      mediaRecorder = new MediaRecorder(stream);

      audioChunks = [];
      mediaRecorder.start();
      isRecording = true;

      document.getElementById("statusText").innerText = "Iâ€™m listeningâ€¦";
      document.getElementById("micBtn").innerText = "â¹ï¸";

      mediaRecorder.ondataavailable = event => {
        audioChunks.push(event.data);
      };

      mediaRecorder.onstop = () => {
        const audioBlob = new Blob(audioChunks, { type: "audio/webm" });
        console.log("Recorded audio blob:", audioBlob);

        // ðŸ”— SEND THIS audioBlob TO YOUR AI BACKEND LATER
        // fetch('/analyze', { method: 'POST', body: audioBlob })

        triggerBreathing(); // demo behavior
      };

    } catch (err) {
      alert("Microphone access denied.");
      console.error(err);
    }
  }

  function stopMic() {
    mediaRecorder.stop();
    stream.getTracks().forEach(track => track.stop());
    isRecording = false;

    document.getElementById("statusText").innerText = "Processingâ€¦";
    document.getElementById("micBtn").innerText = "ðŸŽ¤";
  }

  function triggerBreathing() {
    document.getElementById("breathingCircle").style.display = "block";
    document.getElementById("breathingText").innerText =
      "Breathe inâ€¦ Breathe outâ€¦";
    document.getElementById("statusText").innerText = "";
  }
</script>


